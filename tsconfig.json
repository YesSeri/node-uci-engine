{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "lib": ["es2020.string"],
        "moduleResolution": "node",
        "baseUrl": ".",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.*",
        "test/**/*.*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "engine"
    ]
}
